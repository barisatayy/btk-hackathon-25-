    <div id="word-form">
        <input type="text" id="wordInput" placeholder="Kelime veya cÃ¼mle ekle..." onkeypress="handleWordInput(event)"
               maxlength="100">
        <button onclick="addWordToCollection()">Ekle</button>
    </div>
    {% endif %}

    <div id="wordListContainer">
